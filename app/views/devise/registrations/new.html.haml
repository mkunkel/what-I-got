-if resource.errors
  .alert Your account could not be created.

%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  //= devise_error_messages!
  = f.input :email, placeholder: "Email", autofocus: true
  = f.input :username, placeholder: "Username"
  = f.input :password, placeholder: "password", autocomplete: "off"
  = f.input :password_confirmation, placeholder: "retype password", autocomplete: "off"
  = f.button :submit, "Sign up"
= render "devise/shared/links"
