#collection_for.collections
  %h1 Collections for #{@username.capitalize}
  %h3 #{@no_collection}
  - @collections.each do |col|
    .collection_box
      %h2.col= '- ' + col.title + ' -'
      %span
        .show= link_to("Show", collection_path(id: col.id))
        .edit= link_to("Edit", edit_collection_path(id: col.id))
        .delete= link_to("Delete",  delete_collection_path(id: col.id))
